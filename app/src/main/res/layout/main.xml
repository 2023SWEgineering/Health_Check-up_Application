<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "640dp">

        <ImageButton
            android:contentDescription="checkup_list"
            android:id="@+id/checkup_list"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/main_checkup"/>
        <ImageButton
            android:contentDescription="list_icon"
            android:id="@+id/list_icon"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/list_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="나만의\n건강검진\n목록"
            android:textSize="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>


        <ImageButton
            android:contentDescription="search_hospital"
            android:id="@+id/search_hospital"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/main_hospital"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF6347"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="30dp"
            android:textSize="45dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="주변 병원\n탐색하기" />
        <ImageButton
            android:contentDescription="hospital_icon"
            android:id="@+id/hospital_icon"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/hospital_icon"/>


        <ImageButton
            android:contentDescription="change_information"
            android:id="@+id/change_information"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/main_setting"/>
        <ImageButton
            android:contentDescription="user_icon"
            android:id="@+id/user_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/user_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:gravity="center_vertical|right"
            android:text="내 정보\n 변경"
            android:textStyle="bold"
            android:textSize="45dp"
            android:layout_marginRight="30dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

</LinearLayout>